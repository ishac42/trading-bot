# Trading Bot - Environment Variables
# Copy to .env and fill in values: cp .env.example .env

# Database
DATABASE_URL=postgresql+asyncpg://trading_bot_user:trading_bot_pass@localhost:5432/trading_bot

# Alpaca API (https://app.alpaca.markets/paper/dashboard/overview)
ALPACA_API_KEY=your_paper_api_key_here
ALPACA_SECRET_KEY=your_paper_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Redis (optional)
REDIS_URL=redis://localhost:6379

# Application
ENVIRONMENT=development
LOG_LEVEL=INFO
APP_NAME=Trading Bot API
DEBUG=true

# WebSocket
WS_PING_INTERVAL=25
WS_PING_TIMEOUT=60
